%h1 
  = "Personal" if @user_page
  Tournaments

%table{:class => %w(table table-bordered table-striped)}
  %tr
    %th Name
    %th Start
    %th
    %th
    %th

  - @tournaments.each do |tournament|
    %tr
      %td= tournament.name
      %td= tournament.start
      %td= link_to 'Show', tournament
      %td= link_to 'Edit', edit_tournament_path(tournament)
      %td= link_to 'Destroy', tournament, :method => :delete, :data => { :confirm => 'Are you sure?' }

- if current_user
  %br

  = link_to 'New Tournament', new_tournament_path, :class => "btn"
- else
  %p 
    Register to create new tournaments
    = link_to "Sign Up", user_registration_path, :class => :btn
