= form_for @award, :autocomplete => false do |f|
  - if @award.errors.any?
    #error_explanation
      %h2= "#{pluralize(@award.errors.count, "error")} prohibited this award from being saved:"
      %ul
        - @award.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = text_field :user, :username, :class => :typeahead, :autocomplete => false
  .field
    = f.hidden_field :tournament_id
  .field
    = f.label :amount
    = f.number_field :amount, :value => 0
  .actions
    = f.submit 'Save'
