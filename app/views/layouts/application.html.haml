!!! 5
%head
  %title 
    Rankable
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body

  .container
    .navbar
      .navbar-inner
        = link_to "Rankable", root_path, :class => :brand
        %ul.nav
          %li
            = link_to "Tournaments", tournaments_path

        - if current_user
          = link_to 'Log Out', destroy_user_session_path, :class => 'pull-right btn-primary btn', :method => :delete
        - else
          = link_to 'Sign in', new_user_session_path, :class => 'pull-right btn btn-primary'
    .main
      .notices
        - if notice
          %p.notice 
            = notice

        - if alert
          %p.alert 
            = alert

      = yield
