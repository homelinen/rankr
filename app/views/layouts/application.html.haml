!!! 5
%html
  %head
    %meta{ :charset => "UTF-8" }

    %title Rankable
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  %body

    .wrapper.container
      .navbar
        .navbar-inner
          = link_to "Rankable", root_path, :class => :brand
          %ul.nav
            %li
              = link_to "Tournaments", tournaments_path
            %li 
              = link_to "Matches", matches_path

          - if current_user
            = link_to 'Log Out', destroy_user_session_path, :class => 'pull-right btn-primary btn', :method => :delete
          - else
            = link_to 'Sign in', new_user_session_path, :class => 'pull-right btn btn-inverse'
      .main
        .notices
          - if notice
            %p.alert.alert-info 
              = notice

          - if alert
            %p.alert.alert-error
              = alert

        = yield
