= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this award from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.hidden_field :tournament_id
  .field
    = f.label :game
    = f.text_field :game
  .field 
    = f.label :start
    = f.text_field :start
    = f.label :time
    = time_picker :time
  .field
    = f.label :duration
    = time_picker :duration, {:hour => 12}
  .actions
    = f.submit 'Save'
